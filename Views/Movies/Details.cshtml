@model Movie


<div class="container">
    <h2>Detalhes do Filme</h2>
    <dl class="row">
        <dt class="col-sm-2">Titulo:</dt>
        <dt class="col-sm-10">@Model.Title</dt>

        <dt class="col-sm-2">Diretor:</dt>
        <dt class="col-sm-10">@Model.Director</dt>

        <dt class="col-sm-2">Ano:</dt>
        <dt class="col-sm-10">@Model.Year</dt>
    </dl>
    <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
</div>